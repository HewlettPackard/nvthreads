#! /bin/bash

#PROGBASE="nvthreads/apps/pagerank/multithreaded/"
PROGBASE=""

INPUT="../../../../mnt/bruegner/adj_clueweb_100M"
#INPUT="../../../../mnt/bruegner/adj_livejournal_snap"
OUTPUTBASE="../../../../mnt/bruegner/res/clueweb"

#NAMES=("prr-dt" "prr-nvt")
NAMES=("prr-dt")

THREADS=(4)
#THREADS=(2 2 2 4 4 4 8 8 8 12 12 12)
#NLINES=1215492978
NLINES=68993773
NIT=10

echo 
echo === PRR BENCHMARK @ $(date) ===
echo

for NAME in "${NAMES[@]}"
do
	echo
	echo === RUNNING $NAME-BENCHMARKS ===
	
	for NTHD in "${THREADS[@]}"
	do
		echo
		echo -- NTHD=$NTHD NIT=$NIT
		echo
		./$PROGBASE$NAME $INPUT $NIT $NTHD $NLINES $OUTPUTBASE"_"$NAME"_"$NIT"_"$NTHD
	done
done

echo
echo === FINISHED PRR BENCHMARK @ $(date) ===
